<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h2>User Homepage</h2>
    </section>
    <section>
      <h1>RC Points:</h1>
      <h2><%= @user.rc_score %></h2>
    </section>
    <section>
      <h1>Contacts:</h1>
      <h2><%= render 'users/list_contacts' %></h2>
    </section>
  </aside>
  <aside class="span8">
    <section>
      <h1>List of commitments:</h1>
      <%= render 'users/list_commitments' %>
    </section>
  </aside>
</div>